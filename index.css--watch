* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  text-decoration: none;
  outline: none;
  text-transform: none;
  text-transform: capitalize;
  font-family: Arial, Helvetica, sans-serif;
}

html {
  font-size: 62.5%;
  overflow: hidden;
  overflow-y: scroll;
}
html::-webkit-scrollbar {
  width: 1rem;
}
html::-webkit-scrollbar-track {
  background: #0d0d0d;
}
html::-webkit-scrollbar-thumb {
  background: crimson;
  border-radius: 5rem;
}

body {
  background: #0d0d0d;
  padding-bottom: 6.5rem;
}

@media (max-width: 1200px) {
  html {
    font-size: 55%;
    overflow-y: scroll;
  }
}
@media (max-width: 450px) {
  html {
    font-size: 50%;
  }
}
.nav-sec {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  align-items: flex-end;
  display: flex;
  justify-content: space-between;
}

a {
  padding: 2rem;
  font-size: 2rem;
  background: #1a1a1a;
  flex: 1;
  color: white;
  text-align: center;
  transition: 0.2s linear;
}
@media (max-width: 450px) and (max-width: 450px) {
  a span {
    display: none;
  }
}
@media (max-width: 450px) {
  a i {
    padding: 0;
  }
}
@media (max-width: 450px) {
  a:hover {
    padding-bottom: 2rem;
  }
}
a i {
  color: crimson;
  padding-right: 0.5rem;
}
a:hover {
  background: crimson;
  padding-bottom: 4rem;
  border-radius: 5px 5px 0px 0px;
}
a:hover i {
  color: white;
}

.home-section {
  padding: 5rem 9%;
  display: flex;
  align-items: center;
  gap: 4rem;
  min-height: calc(100vh - 6.5rem);
}
@media (max-width: 1250px) {
  .home-section {
    padding: 3rem 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    gap: 2rem;
  }
}
.home-section .image {
  flex: 1 1 42rem;
}
@media (max-width: 1250px) {
  .home-section .image {
    flex: none;
  }
}
.home-section .image img {
  height: 40rem;
  width: 50rem;
  border-radius: 360% 249% 653%/411% 44% 954% 198%;
}
@media (max-width: 1250px) {
  .home-section .image img {
    height: 30rem;
    width: 30rem;
  }
}
.home-section .content {
  flex: 1 1 42rem;
}
@media (max-width: 1250px) {
  .home-section .content {
    flex: none;
  }
}
.home-section .content h3 {
  color: white;
  font-size: 4rem;
  padding-bottom: 0.5rem;
}
@media (max-width: 1250px) {
  .home-section .content h3 {
    font-size: 3rem;
  }
}
.home-section .content span {
  font-size: 3rem;
  color: crimson;
  padding: 0.5rem 0;
  display: block;
}
@media (max-width: 1250px) {
  .home-section .content span {
    font-size: 2.5rem;
  }
}
.home-section .content p {
  font-size: 1.5rem;
  color: #aaa;
  padding: 1rem 0;
  line-height: 2;
}
.home-section .content .btn {
  display: inline-block;
  padding: 8px 20px;
  border-radius: 7rem;
  background: crimson;
  color: white;
  font-size: 1.7rem;
}
.home-section .content .btn i {
  height: 4rem;
  width: 4rem;
  line-height: 4rem;
  font-size: 1.7rem;
  text-align: center;
  background: white;
  color: crimson;
  border-radius: 50%;
  transition: 0.2s linear;
}
.home-section .content .btn i:hover {
  margin-left: 2rem;
}

.about-section {
  padding: 5rem 9%;
}
.about-section .heading {
  text-align: center;
  font-size: 6vw;
  color: white;
  margin-bottom: 3rem;
  text-transform: uppercase;
}
.about-section .heading span {
  text-transform: uppercase;
  color: crimson;
}
.about-section .row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 2rem;
}
.about-section .row .btn {
  display: inline-block;
  padding: 5px 10px;
  border-radius: 7rem;
  background: crimson;
  color: white;
  font-size: 1.7rem;
}
.about-section .row .btn i {
  height: 4rem;
  width: 4rem;
  line-height: 4rem;
  font-size: 1.7rem;
  text-align: center;
  background: white;
  color: crimson;
  border-radius: 50%;
  transition: 0.2s linear;
}
.about-section .row .btn i:hover {
  margin-left: 2rem;
}
.about-section .row .info-container {
  flex: 1 1 42rem;
}
.about-section .row .info-container h1 {
  font-size: 3rem;
  color: white;
  text-transform: uppercase;
  padding-bottom: 1rem;
}
.about-section .row .info-container .box-container {
  padding: 1rem 0;
  display: flex;
  flex: wrap;
  gap: 2rem;
}
.about-section .row .info-container .box-container .box {
  flex: 1 1 20rem;
}
.about-section .row .info-container .box-container .box h3 {
  font-size: 1.3rem;
  color: white;
  padding: 1rem 0;
  font-weight: normal;
}
.about-section .row .info-container .box-container .box h3 span {
  color: #aaa;
}
.about-section .row .count-container {
  flex: 1 1 42rem;
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
}
.about-section .row .count-container .box {
  flex: 1 1 20rem;
  padding: 3rem 4rem;
  border-radius: 0.5rem;
  background: #1a1a1a;
  box-shadow: 0.5rem 1rem rgba(0, 0, 0, 0.7);
}
.about-section .row .count-container .box h3 {
  font-size: 5rem;
  color: crimson;
}
.about-section .row .count-container .box p {
  padding-top: 1rem;
  font-size: 1.5rem;
  color: #aaa;
}

.skills-section {
  padding: 7rem 9%;
}
.skills-section .heading {
  text-align: center;
  font-size: 6vw;
  color: white;
  margin-bottom: 3rem;
  text-transform: uppercase;
}
.skills-section .heading span {
  text-transform: uppercase;
  color: crimson;
}
.skills-section .box-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
  gap: 1.5rem;
}
.skills-section .box-container .box {
  padding: 2rem;
  text-align: center;
  box-shadow: 0.5rem 1rem rgba(0, 0, 0, 0.7);
  border-radius: 0.5rem;
  background: #1a1a1a;
}
.skills-section .box-container .box:hover {
  background: white;
}
.skills-section .box-container .box:hover h3 {
  color: #0d0d0d;
}
.skills-section .box-container .box img {
  height: 7rem;
  margin-bottom: 1rem;
}
.skills-section .box-container .box h3 {
  color: white;
  font-size: 1.7rem;
  font-weight: normal;
  text-transform: uppercase;
}

.education-section {
  padding: 7rem 9%;
}

